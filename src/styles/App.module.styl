.deal-text
  position fixed
  left 50%
  transform translateX(-50%)
  z-index 110
  width fit-content

.header-section
  position relative
  margin-top -34px
  height calc(100dvh - 34px)

  video
    position absolute
    inset 0
    z-index -1
    height 100%
    width 100%
    object-fit cover

.header-section-content
  display flex
  height 100%
  width 100%
  flex-direction column

  > div
    background #ffffff4d
    max-width 380px
    z-index 1
    border-radius 4px
    -webkit-backdrop-filter blur(15px)
    backdrop-filter blur(15px)
    padding 24px 20px
    margin auto 0 calc(12px + 34px) 0

    h1
      font-size 36px
      font-weight 500
      line-height 1.04
      margin-bottom 12px

    > p
      font-size 14px
      font-weight 400
      line-height 1.25
      margin-bottom 10px

    > .feature-items
      display flex
      justify-content space-between
      align-items center

      div
        display flex
        flex-direction column
        align-items center
        gap 8px

        img
          width 40px
          height 40px

        p
          font-size 10px
          text-transform uppercase

    > .header-section-content-footer
      display flex
      justify-content space-between
      align-items center
      margin-top 28px

      > .rating-box
        display flex
        justify-content center
        align-items center
        flex-direction column
        gap 2px

        > .rating-box-stars
          display flex
          justify-content center
          align-items center
          gap 4px

        > p
          font-size 10px
          font-weight 400
          text-transform uppercase
