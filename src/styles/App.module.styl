// Variables
$primary-color = #646cffaa
$react-color = #61dafbaa
$text-muted = #888

// Logo styles
.logo
  height 6em
  padding 1.5em
  will-change filter
  transition filter 300ms

  &:hover
    filter drop-shadow(0 0 2em $primary-color)

  &.react:hover
    filter drop-shadow(0 0 2em $react-color)

// Keyframes
@keyframes logoSpin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

// Media query for animation
@media (prefers-reduced-motion: no-preference)
  .logoAnimated
    animation logoSpin infinite 20s linear

// Card styles
.card
  padding 2em

// Documentation text
.readTheDocs
  color $text-muted
